<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Practical_1" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <style name="CalculatorButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_button_selector</item>
    </style>
    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:background">@drawable/round_button_selector</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CalculatorDisplayText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Practical_1" parent="Base.Theme.Practical_1" />
</resources>